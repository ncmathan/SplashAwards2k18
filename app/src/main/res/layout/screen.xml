<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/healthvitals"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#3300"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monitor your health vitals and eating patterns!"
            android:textSize="25dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/chart"
            android:scaleType="centerCrop"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recipe"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#33ff"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check out some NEW recipes!"
            android:textSize="30dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/food"
            android:scaleType="centerCrop"
            android:layout_weight="2"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shopping"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ff5555"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Groceries Online"
            android:textSize="30dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shopping"
            android:scaleType="centerCrop"
            android:layout_weight="2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#88ff88"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Track your:"
                android:textSize="30dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="2"
                android:textSize="20dp"
                android:text="Calories ðŸ”¥"
                />
            <Button
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="2"
                android:textSize="20dp"
                android:text="weight âš–"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/appointment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ff0"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book an appointment"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:id="@+id/doc"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/doctor"
                android:scaleType="center"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/doc"
                />
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>